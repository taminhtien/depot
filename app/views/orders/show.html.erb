<p id="notice"><%= notice %></p>

<table>
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>Email</th>
		<th>Pay type</th>
	</tr>
	<tr>
		<td><%= @order.name %></td>
		<td><%= @order.address %></td>
		<td><%= @order.email %></td>
		<td><%= @order.pay_type %></td>
	</tr>
</table>
<br>
<table>
	<tr>
		<th>Product</th>
		<th>Quantity</th>
		<th>Total Price</th>
	</tr>
	<% @order.line_items.each do |item| %>
		<tr>
			<td><%= item.product.title %></td>
			<td><%= item.quantity %></td>
			<td><%= number_to_currency item.total_price %></td>
		</tr>
	<% end %>
	<tr>
		<th colspan="2">Total</th>
		<th><%= number_to_currency(@order.line_items.map(&:total_price).sum) %></th>
	</tr>
</table>

<%= link_to 'Back', store_url %>
